<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRelative">

    <Button
        android:id="@+id/btnNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem Nhan Vien" />
    <Button
        android:id="@+id/btnViTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNhanVien"
        android:text="Xem Vi Tri" />
    <Button
        android:id="@+id/btnGanViTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnViTri"
        android:text="Gan Vi Tri" />
</RelativeLayout>