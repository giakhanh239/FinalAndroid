<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViTriActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtVtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"></EditText>

        <EditText
            android:id="@+id/txtVtDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Describe"></EditText>

        <Button
            android:id="@+id/btnVtThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"></Button>
        <Button
            android:id="@+id/btnThongKe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thong Ke"></Button>


    </LinearLayout>

    <ListView
        android:id="@+id/lvViTri"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></ListView>
</LinearLayout>